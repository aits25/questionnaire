.gscard {
	font-size: 12px;
	padding: 2px;
	border: solid 1px #F2F2F2;
	border-top-right-radius: 6px;
	border-bottom-right-radius: 6px;
	-moz-border-radius-topright: 6px;
	-moz-border-radius-bottomright: 6px;
	-webkit-border-top-right-radius: 6px;
	-webkit-border-bottom-right-radius: 6px;
}

.gscard .box {
	height: 18px;
	padding: 3px 0;
	font-family: Verdana;
}

.gscard .pic {
	padding-right: 7px;
	float: left;
}

.gscard .status {
	height: 18px;
	padding: 3px 0;
	color: #666;
	font-family: Courier New;
	font-size: 11px;
}

.gscard .digg {
	float: right;
	border-style: dashed;
	border-color: transparent;
	border-width: 6px;
	height: 0;
	width: 0;
	margin-right: 5px;
	margin-top: -3px;
	border-bottom-width: 1em;
	border-bottom-style: solid;
	border-bottom-color: #D2E6B1;
}

.gscard .digg:hover {
	border-bottom-color: green;
}

.gscard .inwid {
	clear: both;
	margin-top: 2px;
	font-size: 10px;
	padding-top: 3px;
	padding-bottom: 0;
	padding-left: 3px;
	padding-right: 3px;
	border-top: solid 1px #EEE;
}

.gscard .inwid a {
	color: #999 !important;
}

.gscard .all {
	float: right;
}
