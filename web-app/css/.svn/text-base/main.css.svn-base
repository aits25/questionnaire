/* Space */
.boxSpace {
	margin-bottom: 15px;
}

.boxSpace input[type=text], .boxSpace textarea {
	border: solid 1px #CCC;
}

hr.line {
	height: 1px;
	background-color: #F2F2F2;

}

/* Icon
********************/

.icon16_profile {
	background-image: url(../images/icons/16/profile.png)
}

.icon16_message {
	background-image: url(../images/icons/16/message.png)
}

.icon16_credit {
	background-image: url(../images/icons/16/credit.png)
}

.icon16_colocation {
	background-image: url(../images/icons/16/colocation.png)
}

.icon16_gameserver {
	background-image: url(../images/icons/16/gameserver.png)
}

/* Form
********************/

table.form {
	width: 100%;
}

table.form td {
	padding-bottom: 15px;
	vertical-align: top;
}

table.form td.name {
	white-space: nowrap;
	text-align: right;
	width: 100px;
	font-size: 100%;
	padding-right: 10px;
	font-weight: bold;
	color: #000;
}

table.form td.value {
}

table.form td.line {
	border-top: solid 1px #CCC;
}

table.form td.error {
	color: #FD0002;
}

table.form td.sticky {
	color: #ff1493;
}

table.form tr:last-child td {
	padding-bottom: 0;
}

table.form input + div, table.form select + div, table.form textarea + div {
	padding-top: 2px;
}

/* Detail
********************/

table.detail {
	width: 100%;
}

table.detail td {
	padding-bottom: 5px;
	vertical-align: top;
}

table.detail td.name {
	white-space: nowrap;
	text-align: left;
	width: 100px;
	padding-right: 10px;
}

table.detail td.value {
}

/* List
********************/

table.list {
	width: 100%;
}

table.list th {
	padding: 1px 8px;
	text-align: left;
	font-weight: bold;
	border-bottom: dashed 1px #BBB;
}

table.list tr.bg th {
	background-color: #F9D7B1;
	color: #8b0000;
}

table.list tr.bg td {
	background-color: transparent;
}

table.list th:first-child {
	padding-left: 0;
}

table.list th:last-child {
	padding-right: 0;
}

table.list td {
	padding: 2px 8px;
	border-bottom: dotted 1px #EEE;
	vertical-align: middle;
}

table.list td:first-child {
	padding-left: 0;
}

table.list td:last-child {
	padding-right: 0;
}

table.list td .date {
	background-color: #E7F1FE;
	padding: 0px 4px;
	border-radius: 3px;
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
}

table.list td .user {
}

table.list td .text {
	color: #333;
}